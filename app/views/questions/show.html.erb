<h1><%= @question.title %></h1>
<p><%= @question.body %></p>

<td><%= link_to 'Edit', edit_question_path(@question) %> | </td>
<td><%= link_to 'Delete', question_path(@question), method: :delete, data: { confirm: "Вы уверены?"} %> | </td>
<td><%= link_to 'Back', questions_path %></td>

<h2>Answers</h2>

<table class="table">
  <tr>
    <th>Body</th>
    <th>Author</th>
    <th>Actions</th>
  </tr>
    <%= render @question.answers %>
</table>
<%= render 'answers/form', question: @question, answer: @answer %><br>